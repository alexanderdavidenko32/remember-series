extends ./index.jade

block content
  h1 #{message} !!
  if errors.userExists
    h2 #{errors.userExists}
  form(action="/register" method="post")
    fieldset
      input(type="text" name="login")
      input(type="password" name="password")
      input(type="hidden" name="_csrf" value="#{_csrf}")
      input(type="submit")

