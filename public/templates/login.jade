extends ./index.jade

block content
  h1 #{message} !!
  if errors.error
    h2 #{errors.error}
  form(action="/login" method="post")
    fieldset
      input(type="text" name="login")
      if errors.login
        span.error #{errors.login}
      input(type="password" name="password")
      if errors.password
        span.error #{errors.password}
      input(type="hidden" name="_csrf" value="#{_csrf}")
      input(type="submit")
