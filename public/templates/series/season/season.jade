extends ../../index

block content
  div number: #{season.number}
  div name: #{season.name}
  div description: #{season.description}
  div poster:
    img(src="#{season.poster}")
  div year: #{season.year}
  if season.progress
    div is watched: #{season.progress.isWatched}
    div time: #{season.progress.time}
  div
    a(href="/series/#{series._id}/season/#{season._id}/edit") edit
  div
    form(method="post" action="?_method=DELETE")
      input(type="hidden" name="_csrf" value="#{_csrf}")
      input(type="submit" value="delete")
  div
    a(href="/series/#{series._id}/season/#{season._id}/episode") list of eposdes
