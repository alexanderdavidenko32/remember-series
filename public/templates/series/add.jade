extends ../index

block content
  form(action="/series/#{form._id}?_method=#{form.method}" method="post")
    fieldset
      if errors && errors.name
          span.error #{errors.name}
      label name
        input(name="name" value="#{form.name ? form.name : ''}")
      if errors && errors.description
          span.error #{errors.description}
      label description
        input(name="description" value="#{form.description ? form.description : ''}")
      if errors && errors.poster
          span.error #{errors.poster}
      label poster
        input(name="poster" value="#{form.poster ? form.poster : ''}")
      if errors && errors.year
          span.error #{errors.year}
      label year
        input(name="year" value="#{form.year ? form.year : ''}")
      if form.progress
        label time
          input(name="time" value="#{form.progress.time ? form.progress.time : ''}")
        label is watched
          if form.progress.isWatched
            input(name="isWatched" type="checkbox" checked)
          else
            input(name="isWatched" type="checkbox")
      input(type="hidden" name="_csrf" value="#{_csrf}")
      input(type="submit")
